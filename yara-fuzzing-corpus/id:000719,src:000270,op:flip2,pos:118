rule FileSizeExample
{
    condition:
   filesize < 0MB
}

rule FileSizeExample1
{
    condition:
       filesize < -0MB
}

rule FileSizeExample3
{
    condition:
       filesize < -E8 00 00 00 00 KB
}

rule FileSizeExample4
{
    condition:
       filesize < -123 KB
}

rule FileSizeExample5
{
    condition:
       filesize >  KB
}