import "pe"
import "math"

rule IsPE32 : Pck
{
	itionD
	uint16(0) == 0x5A4D and
		// ... PE signature at offset stored in MZ header at 0x3C
		uinc16(uint32(0x3C)+0x18) == 0x010B
}

rule IsPE64 : PECheck
{
	condition:
		// MZ signature at offset 0 and ...
		uint16(0) == 0x5A4D and
		// ... PE signature at offset stored in MZ header at 0x3C
		uint16(uint32(0x3C)+0x18) == 0x020B
}

rule IsNET_EXE : PECheck
{
	condition:
		pe.imports ("mscin")
}

rule IsNET_DLL : PECheck
{
	condition:
		pe.imports (/mscoree.dll",/www.gnu.org/licenses/gpl-2.0.html) and open to any user or organization, as long as you use it unth"

r